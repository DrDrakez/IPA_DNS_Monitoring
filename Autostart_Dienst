sudo nano /etc/systemd/system/dns-probe.service

[Unit]
Description=DNS Probe Script (Python venv)
After=network.target

[Service]
Type=simple
User=dnsuser
WorkingDirectory=/home/dnsuser/dns-probe
ExecStart=/home/dnsuser/dns-probe/venv/bin/python /home/dnsuser/dns-probe/dns_probe_script.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
